<div class="container rounded p-3 mx-auto mt-5 justify-content-center">
  <div class="row justify-content-center">
    <div class="col-6">
        <div class="card bg-light mb-3" style="max-width: 18rem;">
          <div class="card-header h1">To Do List</div>
          <div class="card-body">
            <ul>
              <% @tasks.each do |task| %>
                <li><%= link_to task.title, task_path(task) %></li>
              <% end %>
            </ul>
            <br>
            <br>
            <br>
            <p><%= link_to 'Create a new Task', new_task_path %></p>
          </div>
        </div>
    </div>
  </div>
</div>